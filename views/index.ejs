<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <div class="main-nav container flex">
            <a href="http://localhost:3000/" onclick="reload()" class="company-logo">
                <img src="/photos/Capture.JPG" alt="company logo">
            </a>
            <div class="nav-links">
                <ul class="flex">
                    <li class="hover-link nav-item" id="ipl" onclick="onNavItemClick('Technology')">Technology</li>
                    <li class="hover-link nav-item" id="finance" onclick="onNavItemClick('finance')">Finance</li>
                    <li class="hover-link nav-item" id="politics" onclick="onNavItemClick('politics')">Politics</li>
                    <li class="hover-link nav-item" id="politics" onclick="onNavItemClick('Business')">Business</li>
                    <li class="hover-link nav-item" id="politics" onclick="onNavItemClick('Lifestyle')">Lifestyle</li>
                </ul>
            </div>
            <form action="/search" method="get" class="search-bar flex">
                <input id="search-text" class="news-input" type="search" name="search" placeholder="Search news...">
                <button type="submit" id="search-button" class="search-button">Search</button>
            </form>
        </div>
    </nav>
    <main>
        <div class="cards-container container flex" id="cards-container">
            
        </div>
    </main>
    <article class="news-cards">
        <% news.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <img src="https://placehold.co/600x400" alt="Image">
            </div>
                <a href= "#"  class= "card-contents">
                    <h2><%= article.title %></h2>
                    <p><%= article.author %></p>
                    <p>Published at: <%= article.publishedAt %></p>
                    <a href="<%= article.url %>">Read more</a>
                </a>
        </div>
        <% }); %>
    </article>
</body>
</html>